<h1>Available Features:</h1>

<table>
<% @features.each do |feature| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(feature.report, class: 'list_report') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= feature.name %></dt>
        <dd><%= truncate(strip_tags(feature.description), length: 200) %></dd>
        <br>
        <dd><%= link_to "See Data", feature.data, :target => '_blank' %></dd>
        <br>
        <dd><%= link_to "View Infographic", feature.report, :target => '_blank' %></dd>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', feature %><br/>
      <%= link_to 'Edit', edit_feature_path(feature) %><br/>
      <%= link_to 'Destroy', feature, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New feature', new_feature_path %>
